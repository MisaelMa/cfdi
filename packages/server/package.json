{
  "name": "@recreando/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "get-mexican-data-by-curp": "0.7.5-beta",
    "@cfdi/pdf": "workspace:*",
    "@cfdi/curp": "workspace:*",
    "@cfdi/xml": "workspace:*",
    "@cfdi/csd": "workspace:*",
    "@clir/openssl": "workspace:*",
    "@cfdi/utils": "workspace:*",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "9.2.6",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "@rushstack/eslint-config": "^2.6.0",
    "@rushstack/heft-jest-plugin": "^0.3.1",
    "@rushstack/heft": "^0.45.1",
    "@recreando/eslint-settings": "workspace:*",
    "@recreando/jest": "workspace:*",
    "@recreando/typescript-settings": "workspace:*",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/dom": "^8.13.0",
    "@types/node": "^17.0.29",
    "@testing-library/react": "^13.2.0",
    "@types/testing-library__jest-dom": "^5.9.1",
    "eslint": "^8.13.0",
    "jest": "^28.1.2",
    "@types/react-dom": "^18.0.3",
    "@types/react": "^18.0.8",
    "@types/styled-components": "^5.1.25",
    "react-is": "^18.1.0",
    "stylelint": "^13.13.1",
    "@types/express-serve-static-core": "^4.17.29",
    "@types/node-forge": "^1.0.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
